<resources>

    <!-- 기본 테마 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 테마 커스텀 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="drawerArrowStyle">@style/DrawerArrowToggle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <!-- Hint for edit text -->
        <item name="android:hint">검색</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Toolbar" parent="AppTheme">
        <!-- Toolbar Title Color -->
        <item name="android:textColorPrimary">@android:color/white</item>

        <!-- Toolbar Up Button Color -->
        <item name="android:textColorSecondary">#ccffffff</item>
    </style>

    <style name="DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
</resources>
